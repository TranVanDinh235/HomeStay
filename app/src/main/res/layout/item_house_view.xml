<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_135sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_76sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/house_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_temp"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/house_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginTop="@dimen/_6sdp"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/layout_photo"
        tools:text="Michelle's Sunshire -"
        />

    <TextView
        android:id="@+id/house_original_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_light"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/house_title"
        tools:text="200000d" />

    <TextView
        android:id="@+id/house_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_2sdp"
        app:layout_constraintTop_toBottomOf="@id/house_original_price"
        tools:text="2.000.000d" />

    <TextView
        android:id="@+id/house_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/house_price"
        tools:text="4 ngoi sao" />

    <TextView
        android:id="@+id/tv_num_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/house_star"
        app:layout_constraintTop_toBottomOf="@id/house_price"
        tools:text="10" />

    <ImageView
        android:id="@+id/icon_house_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:paddingRight="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintTop_toBottomOf="@id/house_star"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/house_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_house_type"
        app:layout_constraintStart_toEndOf="@id/icon_house_type"
        app:layout_constraintTop_toTopOf="@id/icon_house_type"
        tools:text="Can ho chung cu" />

    <ImageView
        android:id="@+id/icon_house_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin"
        android:paddingRight="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:layout_constraintTop_toBottomOf="@id/icon_house_type"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/house_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_house_address"
        app:layout_constraintStart_toEndOf="@id/icon_house_address"
        app:layout_constraintTop_toTopOf="@id/icon_house_address"
        tools:text="Hoan Kiem, Ha Noi" />

</androidx.constraintlayout.widget.ConstraintLayout>