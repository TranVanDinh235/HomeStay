<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="0dp">

    <ImageView
        android:id="@+id/item_city_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_temp2"/>

    <TextView
        android:id="@+id/item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/merriweather_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_26sdp"
        app:layout_constraintBottom_toTopOf="@+id/item_city_title"
        app:layout_constraintStart_toStartOf="@+id/item_city_load_more"
        android:layout_marginBottom="@dimen/_4sdp"
        tools:text="Ha Noi" />

    <TextView
        android:id="@+id/item_city_title"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/merriweather_bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toTopOf="@+id/item_city_load_more"
        app:layout_constraintStart_toStartOf="@+id/item_city_load_more"
        android:layout_marginBottom="@dimen/_8sdp"
        tools:text="Ha Noi ngay hom nay dep hon moi hom" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/item_city_load_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xem thÃªm"
        android:textAlignment="center"
        android:fontFamily="@font/work_sans_bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:shadowColor="?attr/colorOnSecondary"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>