<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    app:cardElevation="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_topic_item_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_135sdp"
            android:src="@drawable/img_temp" />

        <TextView
            android:id="@+id/item_topic_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:fontFamily="@font/lora_bold"
            android:textSize="@dimen/_14sdp"
            tools:text="Deal of the Week: Ha Noi" />

        <TextView
            android:id="@+id/item_topic_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:fontFamily="@font/lora"
            android:textSize="@dimen/_12sdp"
            android:lines="2"
            android:maxLines="2"
            tools:text="Tận hưởng cảm giác thư gian với chỗ ở giá tốt" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

