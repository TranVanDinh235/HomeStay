<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/work_sans_bold"
            android:textSize="28sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="@string/homes"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_login_input_layout_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/layout_login_edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground2"
                android:hint="@string/email"
                android:maxLines="2"
                android:inputType="text"
                android:textColor="@color/colorText2"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_login_input_layout_password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/layout_login_edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground2"
                android:hint="@string/password"
                android:maxLines="2"
                android:inputType="textPassword"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/layout_login_forgot_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:fontFamily="@font/work_sans_medium"
            android:textSize="16sp"
            android:layout_marginEnd="16dp"
            android:text="@string/forgot_password"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_login_native"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="16sp"
                android:text="@string/login"
                android:textColor="@color/colorBackground1" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_login_google"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="16sp"
                android:text="@string/login_google" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/layout_login_facebook"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorBtnFaceBook">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="16sp"
                android:text="@string/login_facebook"
                android:textColor="@color/colorBackground1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/work_sans_medium"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/not_account"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_login_sign_up"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorBackground1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/work_sans_medium"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/sign_up_with_email" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>